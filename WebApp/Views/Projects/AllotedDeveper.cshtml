@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Models.User>

@{
    ViewBag.Title = "AllotedDeveper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Alloted Deveper</h2>

<table class="table">
    <tr>
        <th>
            FullName
        </th>
        <th>
            UserName
        </th>
      
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @{ 
                string detailsLink = "/Account/Details?userID=" + item.UserID;
            }
            <a class="btn btn-info" href=@detailsLink>Details</a>
        </td>
    </tr>
}

</table>
<div class="col-md-12 text-center">
    @{
        string projectid = ViewBag.ProjectID;
    }
    @Html.PagedListPager(Model, newPage => Url.Action("Manager", new { projectID = projectid, page = newPage }))
</div>