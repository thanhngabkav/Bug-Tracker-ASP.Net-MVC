@model Models.Project

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Project Name
        </dt>

        <dd>
            @Model.Name
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Model.Description
        </dd>

        <dt>
            Manager
        </dt>
        @{
            BusinessLogic.UserBL userBL = new BusinessLogic.UserBL();
        }
        <dd>
           @userBL.GetUserByID(Model.ManagerID).UserName
        </dd>

        <dt>
            Init Time
        </dt>

        <dd>
           @Model.InitTime
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
