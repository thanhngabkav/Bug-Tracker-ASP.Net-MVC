@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Error</h2>
<h3 class="text-danger">@TempData["Message"]</h3>
@{
    if (TempData["Message"] == null)
    {
        <h3 class="text-danger">Please try Login again</h3>
    }else
    {
        TempData["Message"] = null;
    }

}
