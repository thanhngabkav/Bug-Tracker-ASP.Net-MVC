@model Models.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div>
    <h4>User</h4>
    <hr>
    <dl class="dl-horizontal">
        <dt>
            User Name
        </dt>

        <dd>
            @Model.UserName
        </dd>

        <dt>
            Full Name
        </dt>

        <dd>
            @Model.FullName
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Model.Email
        </dd>

        <dt>
            Phone
        </dt>

        <dd>
            @Model.Phone
        </dd>

        <dt>
            User Group
        </dt>
        @{
            BusinessLogic.UserBL userBL = new BusinessLogic.UserBL();
            Models.UserGroup userGroup = userBL.GetUserGroup(Model.UserGroupID);
        }
        <dd>
            @userGroup.UserGroupName
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.UserID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
