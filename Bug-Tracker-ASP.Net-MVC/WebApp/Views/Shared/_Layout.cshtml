<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js" type="text/javascript"></script>
    <link href="~/Content/My-sidebar.css" rel="stylesheet" />
    <style type="text/css">
        .nav, .navbar{
            background: #052513;
        }
    </style>
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="btn-group pull-left">
                <button class="btn btn-default btn-sm dropdown-toggle" style="font-size:8px" type="button" data-toggle="dropdown">
                    VietNam <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li style="font-size:8px"><a href="#">English</a></li>
                </ul>
            </div>
            <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                
                    <span style="margin-top:0px" class="nav navbar-nav">
                        >
                        <a href="/Home"><img src="~/Images/bug-icon.png" style="width:50px" /></a>
                    </span>
                   <ul class="nav navbar-nav navbar-collapse collapse">
                        
                         <li><a href="/Projects">PROJECTS</a></li>
                         <li><a href="/Bugs">BUGS</a></li>
                   </ul>
            </div>
            <div class="pull-right" style="margin-right:20px">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <form class="navbar-form navbar-right col-sm-12" role="search">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search" style="width:100%">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button"><i class="glyphicon glyphicon-search"></i></button>
                                </span>
                            </div>
                        </form>
                    </li>
                    @{
                        if (Session[WebApp.Models.UserSession.SessionName] != null)
                        {
                            
                                <li class="pull-right">
                                    <a href="#"><i class="glyphicon glyphicon-globe"></i></a>
                                </li>
                                <li class="dropdown pull-right">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i></a>
                                    <ul class="dropdown-menu dropdown-menu-left" role="menu">
                                        <li role="presentation"><a href="/Account/MyAccount">My Info</a></li>
                                        <li role="presentation"><a href="/Login/Logout">Logout</a></li>
                                    </ul>
                                </li>
                        }
                        else
                        {
                            <li><a href="/Login">Login</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </header>
    @{
        if (Session[WebApp.Models.UserSession.SessionName] != null)
        {
            <div class="container">
                <div class="row">
                    <div id="wrapper" class="toggled">
                        <!-- Sidebar -->
                        @RenderPage("~/Views/Shared/_Sidebar.cshtml")
                        <!-- /#sidebar-wrapper -->
                        <!-- Page Content -->
                        <div class="container" id="page-content-wrapper" >
                            <div class="col-lg-12">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }else
        {
             <div class="container" style="margin-top:40px">
                 @RenderBody()
             </div>
        }
    }
   
</body>

</html>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass();
    });
</script>